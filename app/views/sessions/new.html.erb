<% provide(:title, "Sign in") %>
<h1>登陆</h1>
<div class="row">
<div class="span6 offset3">
<%= form_for(:session, url: sessions_path) do |f| %>
	<%= f.label :姓名 %>
	<%= f.text_field :name %>
	<%= f.label :密码 %>
	<%= f.password_field :password %>
	<%= f.submit "登陆", class: "btn btn-large btn-primary" %>
<% end %>
<p>New user? <%= link_to "现在注册", signup_path %></p>
</div>
</div>